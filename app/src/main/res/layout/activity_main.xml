<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.everis.android.androidbasicoaplicado.views.ExtendedEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <com.example.everis.android.androidbasicoaplicado.views.CompositeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <com.example.everis.android.androidbasicoaplicado.views.CustomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:customText="Click to change the color"/>

</LinearLayout>